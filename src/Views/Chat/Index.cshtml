@model ZavaStorefront.Models.ChatViewModel
@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-4">
    <h2><i class="bi bi-chat-dots"></i> AI Chat Assistant</h2>
    <p class="text-muted">Powered by Phi-4 via Azure AI Foundry</p>

    <div class="card mb-3">
        <div class="card-body" id="chatArea" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
            @if (Model.Messages.Count == 0)
            {
                <p class="text-muted text-center mt-5">Start a conversation by typing a message below.</p>
            }
            else
            {
                @foreach (var message in Model.Messages)
                {
                    var isUser = message.Role == "user";
                    <div class="d-flex @(isUser ? "justify-content-end" : "justify-content-start") mb-2">
                        <div class="p-2 rounded @(isUser ? "bg-primary text-white" : "bg-white border")"
                             style="max-width: 75%; white-space: pre-wrap;">
                            <small class="d-block fw-bold mb-1">@(isUser ? "You" : "Assistant")</small>
                            @message.Content
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <form asp-action="Send" method="post">
        <div class="input-group">
            <input type="text" name="UserMessage" class="form-control" placeholder="Type your message..."
                   autocomplete="off" autofocus />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Send
            </button>
        </div>
    </form>

    @if (Model.Messages.Count > 0)
    {
        <form asp-action="Clear" method="post" class="mt-2">
            <button type="submit" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-trash"></i> Clear Chat
            </button>
        </form>
    }
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat area
        var chatArea = document.getElementById('chatArea');
        if (chatArea) {
            chatArea.scrollTop = chatArea.scrollHeight;
        }
    </script>
}
